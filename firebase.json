{
   "hosting": {
      "public": "dist",
      "ignore": [
         "firebase.json",
         "**/.*",
         "**/node_modules/**"
      ],
      "rewrites": [
         {
            "source": "**",
            "destination": "/index.html"
         }
      ],
      "headers": [
         {
            "source": "**",
            "headers": [
               {
                  "key": "Cache-Control",
                  "value": "public, max-age=0, must-revalidate"
               }
            ]
         },
         {
            "source": "/index.html",
            "headers": [
               {
                  "key": "Cache-Control",
                  "value": "no-store, no-cache, max-age=0, must-revalidate"
               }
            ]
         }
      ]
   }
}